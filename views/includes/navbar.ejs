<style>
    .btn-search {
        border: 2px solid #fe424d;
        color: #fe424d;
        background-color: white;
        transition: all 0.3s ease-in-out;
        font-weight: 500;
        padding: 6px 12px;
        border-radius: 6px;
        width: 10rem;
        border-radius: 20px;
    }

    .btn-search:hover {
        background-color: #fe424d;
        color: white;
        box-shadow: 0 2px 8px rgba(254, 66, 77, 0.3);
    }

</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/listings">Explore</a>
            </div>
            <div class="navbar-nav ms-auto">
                <form class="d-flex" method="GET" action="/listings/search">
                    <input class="form-control search-inp me-2" type="text" name="q" placeholder="Search destinations">
                    <button class="btn btn-search" type="submit">
                        Search
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button> 
                </form>
            </div>

            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/listings/new">Add New Listing</a>
                <% if(! currUser){ %>
                    <b>
                        <a class="nav-link" href="/listings/user/signup">Sign up</a>
                    </b>
                    <b>
                        <a class="nav-link" href="/listings/user/login">Login</a>
                    </b>
                    <% } else{ %>
                        <a class="nav-link" href="/listings/user/logout">Logout</a>
                        <% } %>
            </div>
        </div>
    </div>
</nav>