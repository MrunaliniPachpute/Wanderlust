                <div><i class="fa-solid fa-bed" style="color: black;"></i></div>
                <p> Rooms </p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city" style="color: rgb(192, 127, 127);"></i></div>
                <p> Iconic cities </p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain" style="color: brown;"></i></div>
                <p> Mountains </p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome" style="color: rgb(116, 54, 54);"></i></div>
                <p> Castles </p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming" style="color: rgb(71, 21, 117);"></i></div>
                <p> Amazing Pools </p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground" style="color: rgb(7, 88, 7);"></i></div>
                <p> Camping </p>
