                <p> Arctic </p>
            </div>


        </div>
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>

    </div>
    <!-- <form action="/listings/new" method="get">
        <button>Create new Listing</button>
    </form> -->
    <div class="myRow">
        <% for(let listItem of allListings){ %>
            <div class="card">
                <a href="/listings/<%= listItem._id %>" class="card-anchor">
                    <img src="<%= listItem.image.url %>" class="card-img-top" alt="Listing Image">

                    <div class="card-img-overlay"></div>

                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/listings/<%= listItem._id %>">
                                Title : <%= listItem.title %>
                            </a>
                        </h5>
                        <p>
                            Price : &#8377; <%= listItem.price.toLocaleString("en-IN") %> /night
                                <i id="taxVal">&nbsp; &nbsp; +18% GST</i>
                        </p>
                    </div>

                </a>
            </div>

            <% } %>
    </div>

   