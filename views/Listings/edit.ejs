<% layout("layouts/boilerplate.ejs") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Edit listing</h3>
      <form
        action="/listings/<%= ListItem._id %>/edit?_method=PUT"
        method="POST"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label"> Title :</label>
          <input
            type="text"
            id="title"
            value="<%= ListItem.title %>"
            class="form-control"
            name="title"
            required
          />
          <div class="valid-feedback">Title seems good</div>
          <div class="invalid-feedback">Title is required</div>
        </div>

        <div class="mb-3">
          <label for="des" class="form-label">Description : </label>
          <textarea
            name="description"
            rows="5"
            cols="10"
            required
            class="form-control"
            id="des"
          >
<%= ListItem.description %></textarea
          >
          <div class="invalid-feedback">Description is required</div>
        </div>

        <div class="mb-3" >
          Original listing image: <br>
          <img src="<%= ListItem.image.url%>" style=" min-width : 250px ;max-height:200px;" />
        </div>

        <div class="mb-3">
          <label for="img" class="form-label">Upload New Image :</label>
          <input
            id="img"
            class="form-control"
            name="image"
            placeholder="Upload your image URL/Link"
            type="file"
          />
        </div>
 
        <div class="row">
          <div class="col-md-4">
            <div class="mb-3">
              <label for="price" class="form-label">Price :</label>
              <input
                type="number"
                class="form-control"
                name="price"
                value="<%= ListItem.price %>"
                id="price"
                required
                min="0"
              />
              <div class="invalid-feedback">Enter valid price</div>
            </div>
          </div>

          <div class="col-md-8">
            <div class="mb-3">
              <label class="form-label">Country :</label>
              <input
                type="text"
                class="form-control"
                value="<%= ListItem.country %>"
                name="country"
                required
              />
              <div class="invalid-feedback">Country is required</div>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location :</label>
          <input
            id="location"
            class="form-control"
            type="text"
            value="<%= ListItem.location %>"
            name="location"
            required
          />
          <div class="invalid-feedback">Location is required</div>
        </div>
        <button class="btn btn-dark add-btn">Edit</button>

        <br />
        <br />
      </form>
    </div>
  </div>
</body>
