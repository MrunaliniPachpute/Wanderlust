<% layout("layouts/boilerplate.ejs") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Create a new Listing</h3>
      <form
        action="/listings/new"
        enctype="multipart/form-data"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title : </label>
          <input
            type="text"
            id="title"
            placeholder="Enter title"
            name="title"
            required
            class="form-control"
          />
          <div class="valid-feedback">Title seems good</div>
          <div class="invalid-feedback">Please enter valid title</div>
        </div>

        <div class="mb-3">
          <label for="des" class="form-label">Description : </label>
          <textarea
            name="description"
            rows="2"
            id=""
            required
            class="form-control"
          ></textarea>

          <div class="invalid-feedback">Please enter valid Description</div>
        </div>

        <!-- <div class="mb-3">
          <label for="img" class="form-label">Image : </label>
          <input
            name="image"
            id="img"
            placeholder="Upload your image URL/Link"
            type="text"
            class="form-control"
          />
        </div> -->
         <div class="mb-3">
          <label for="img" class="form-label">Upload Listing Image : </label>
          <input
            name="image"
            id="img"
            type="file"
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="mb-3">
              <label for="price" class="form-label">Price :</label>
              <input
                type="number"
                id="price"
                placeholder="Enter Price"
                name="price"
                required
                class="form-control"
                min="0"
              />

              <div class="invalid-feedback">Please enter valid Price</div>
            </div>
          </div>

          <div class="col-md-8">
            <div class="mb-3">
              <label for="country" class="form-label">Country : </label>
              <input
                type="text"
                id="country"
                placeholder="Enter Country"
                name="country"
                required
                class="form-control"
              />

              <div class="invalid-feedback">Please enter valid Country</div>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location : </label>
          <input
            type="text"
            id="location"
            placeholder="Enter Location"
            name="location"
            required
            class="form-control"
          />

          <div class="invalid-feedback">Please enter valid Location</div>
        </div>

        <button class="btn btn-dark add-btn">Add Listing</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
